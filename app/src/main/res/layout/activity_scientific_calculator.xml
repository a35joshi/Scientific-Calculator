<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true">
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Output"
                android:enabled="true"
                android:focusable="true"
                android:longClickable="true"
                android:inputType="text"
                android:textIsSelectable="true"
                android:cursorVisible="true"
                android:textColor="@android:color/black"
                android:bufferType="spannable"
                android:background="@android:color/white"
                android:allowUndo="true" />

            <LinearLayout tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_gravity="right" >

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button_INVERSE"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:text="^(-1)"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_FACTORIAL"
                    android:text="!" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_HISTORY"
                    android:onClick="ShowHistory"
                    android:layout_weight="0.79"
                    android:text="HISTORY" />

            </LinearLayout>

            <LinearLayout tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button_SQR_ROOT"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:text="sqrt"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_SQR"
                    android:text="^2" />

                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_CARROT_MARK"
                    android:text="^" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="log10"
                    android:id="@+id/button_LOG_10" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="log2"
                    android:id="@+id/button_LOG_2" />
            </LinearLayout>

            <LinearLayout tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal" >

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button_NEGATIVE"
                    android:orientation="horizontal"
                    android:layout_width="59dp"
                    android:text="(-)"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:text="sin"
                    android:id="@+id/buttonSIN"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:text="cos"
                    android:id="@+id/buttonCOS" />

                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:text="tan"
                    android:id="@+id/buttonTAN" />

                <Button
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:text="log"
                    android:id="@+id/button_LOG_e" />

            </LinearLayout>

            <LinearLayout tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal" >

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button_OPEN_BRACKET"
                    android:orientation="horizontal"
                    android:layout_width="60dp"
                    android:text="("
                    android:textSize="20sp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:id="@+id/button_CLOSE_BRACKET"
                    android:textSize="20sp"
                    android:layout_weight="0.10" />

                <Button
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:id="@+id/button_COMMA" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearlayout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
        android:weightSum="1"
        android:orientation="horizontal">

            <Button
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:orientation="horizontal"
                android:layout_width="62dp"
                android:text="7"
                 android:textSize="25sp"
                android:layout_weight="0.05" />

            <Button
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                android:orientation="horizontal"
                android:layout_width="52dp"
                android:text="8"
                android:textSize="25sp"
                android:layout_weight="0.21" />
            <Button
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                android:orientation="horizontal"
                android:layout_width="78dp"
                android:textSize="25sp"
                android:text="9" />

                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:id="@+id/buttonDEL"
                    android:background="#ac3939" />

                <Button
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:id="@+id/buttonC"
                    android:background="#ac3939"
                    android:layout_weight="0.14" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/linearlayout"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:orientation="horizontal"
                    android:layout_width="67dp"
                    android:text="4"
                    android:textSize="25sp" />

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:orientation="horizontal"
                    android:layout_width="57dp"
                    android:text="5"
                    android:textSize="25sp"
                    android:layout_weight="0.08" />
                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button6"
                    android:orientation="horizontal"
                    android:layout_width="72dp"
                    android:text="6"
                    android:textSize="25sp"
                    android:layout_weight="0.02" />

                <Button
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="25sp"
                    android:id="@+id/buttonmultiply" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="25sp"
                    android:id="@+id/buttondivide" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/linearlayout"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button1"
                    android:orientation="horizontal"
                    android:layout_width="46dp"
                    android:text="1"
                    android:textSize="25sp"
                    android:layout_weight="0.14" />

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:orientation="horizontal"
                    android:layout_width="35dp"
                    android:text="2"
                    android:textSize="25sp"
                    android:layout_weight="0.18" />
                <Button
                    android:layout_height="48dp"
                    android:id="@+id/button3"
                    android:orientation="horizontal"
                    android:layout_width="51dp"
                    android:text="3"
                    android:textSize="25sp"
                    android:layout_weight="0.13" />

                <Button
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/buttonplus"
                    android:textSize="25sp"
                    android:layout_weight="0.08" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/buttonminus"

                    android:textSize="25sp"
                    android:layout_weight="0.17" />
            </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearlayout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context="scientificcalculatorapp.scientificcalculator.ScientificCalculator"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
            <Button
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:orientation="horizontal"
            android:layout_width="48dp"
                android:text="0"
            android:textSize="30sp"
                android:layout_weight="0.32" />

        <Button
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="30sp"
            android:id="@+id/buttonDecimalPoint"
            android:layout_weight="0.40" />

        <Button
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="EXP"
            android:id="@+id/buttonEXP" />

        <Button
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="ANS"
            android:id="@+id/buttonANS" />

        <Button
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="25sp"
            android:id="@+id/buttonequal" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
